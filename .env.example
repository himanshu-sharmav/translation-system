# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/translation_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=translation_db
DATABASE_USER=translation_user
DATABASE_PASSWORD=secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-32-character-encryption-key-here
API_KEY_LENGTH=32
RATE_LIMIT_PER_MINUTE=100

# Translation Engine Configuration
USE_GPU=true
REQUIRE_GPU=false
MAX_MODELS_IN_MEMORY=3
MAX_MEMORY_USAGE_PERCENT=85.0
TRANSLATION_BATCH_SIZE=8
MAX_SEQUENCE_LENGTH=512
MODEL_CACHE_DIR=./models

# Compute Configuration
MIN_INSTANCES=1
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=0.8
SCALE_DOWN_THRESHOLD=0.3
IDLE_TIMEOUT_MINUTES=10
GPU_INSTANCE_TYPE=g4dn.xlarge
CPU_INSTANCE_TYPE=r5.8xlarge

# Performance Configuration
TARGET_WORDS_PER_MINUTE=1500
MAX_DOCUMENT_WORDS=50000
CACHE_TTL_HOURS=24
MAX_CONCURRENT_JOBS=100

# Monitoring Configuration
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
ALERT_WEBHOOK_URL=
COST_ALERT_THRESHOLD=1000.0

# Environment
ENVIRONMENT=development
DEBUG=false